{
  "name": "desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/hidden/electron/index.js",
  "scripts": {
    "build": "run-s build:*",

    "build:preload": "tsc -p ./scripts/preload/",
    "build:electron": "tsc -p ./scripts/electron/",
    "script:browserify": "browserify $IN_FILE --debug -t [envlocalify --envfile= $ENV_FILE ] -t require-solidity -t browserify-css -p [ tsify -p $TS_FILE ] > $OUT_FILE && echo \"finished build\"",

    "build:render": "IN_FILE=./scripts/render/index.ts ENV_FILE=../shared/.env TS_FILE=./scripts/render/tsconfig.json OUT_FILE=./dist/hidden/render.js npm run script:browserify",
    "build-:render": "IN_FILE=./scripts/render/index.ts ENV_FILE=../shared/.env TS_FILE=./scripts/render/tsconfig.json OUT_FILE=./dist/hidden/render.js export",

    "test": "echo \"Error: no test specified\" && exit 1",
    "eject": "react-scripts eject",
    "start:dev": "run-p start:dev:*",
    "start:dev:electron": "electron .",
    "start:dev-not:watch": "watch 'npm run build:ts' ./src",


    "pack": "run-s pack:*",
    "pack:build": "npm run build",
    "pack:dist": "electron-builder --dir -c.extraMetadata.main=build/Main.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "browserify": "^16.5.0",
    "browserify-css": "^0.15.0",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "envlocalify": "^1.1.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "react-scripts": "^3.2.0",
    "require-solidity": "github:formula1/require-solidity",
    "rimraf": "^3.0.0",
    "tsify": "^4.0.1",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "serve": "^11.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "nonExistentID",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
